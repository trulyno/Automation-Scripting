FROM jenkins/ssh-agent:latest-jdk17

# Switch to root to install packages
USER root

# Install PHP, curl, and necessary packages
RUN apt-get update && apt-get install -y \
    php-cli \
    php-xml \
    php-mbstring \
    php-curl \
    php-zip \
    curl \
    git \
    unzip \
    wget \
    ca-certificates \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Install Composer (curl is now available)
RUN curl -sS https://getcomposer.org/installer | php -- \
    --install-dir=/usr/local/bin \
    --filename=composer \
    && chmod +x /usr/local/bin/composer

# Verify Composer installation
RUN composer --version

# Add composer to PATH for jenkins user's shell
RUN echo 'export PATH="/usr/local/bin:$PATH"' >> /home/jenkins/.bashrc \
    && echo 'export PATH="/usr/local/bin:$PATH"' >> /home/jenkins/.profile

# Create workspace directory
RUN mkdir -p /home/jenkins/workspace && \
    chown -R jenkins:jenkins /home/jenkins/workspace \
    && chown jenkins:jenkins /home/jenkins/.bashrc \
    && chown jenkins:jenkins /home/jenkins/.profile

# Set working directory
WORKDIR /home/jenkins